.auth
  width 330px
  margin 15px auto 0
  color #b9b9b9;

  .panel-heading
    div
      width 113px
      height 48px
      background url('../../../public/images/logo.png') no-repeat 0 0;
      margin 0 auto

  .panel-body
    padding 0 0 15px

    .auth__title
      line-height 50px
      font-weight bold
      border-bottom 1px solid #ddd
      text-align center
      margin 0

    form
      .form-group
        margin 0
        border-bottom 1px solid #ddd

        input
          height 62px
          padding 0 26px
          border none

          &::-webkit-input-placeholder
            font-weight bold
            color #b9b9b9

          &::-moz-placeholder
            font-weight bold
            color #b9b9b9

          &:-ms-input-placeholder
            font-weight bold
            color #b9b9b9

          &:-moz-placeholder
            font-weight bold
            color #b9b9b9

      button, a
        display block
        font-size 15px

      button
        width 272px
        line-height 38px
        margin 30px 26px

      a
        margin-bottom 15px
        text-transform uppercase
        text-align center

        &:hover
          color #27c24c


.auth__corp
  margin-top 30px
  font-size 15px
  text-align center
  font-weight bold
  color #b9b9b9;


@media only screen and (-Webkit-min-device-pixel-ratio: 1.5),
only screen and (-moz-min-device-pixel-ratio: 1.5),
only screen and (-o-min-device-pixel-ratio: 3/2),
only screen and (min-device-pixel-ratio: 1.5)
  .auth
    .panel-heading
      div
        background-image url('../../../public/images/logo@2x.png')
        background-size 113px 48px;
