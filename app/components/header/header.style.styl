.header
  position fixed
  top 0
  width 100%
  height 72px
  box-shadow 0 2px 2px 0 rgba(0, 0, 0, 0.24), 0 0 2px 0 rgba(0, 0, 0, 0.12)
  border-radius 0
  margin 0
  border-width 0
  border-radius 0
  z-index 50

  .header-logo
    width 113px
    height 72px
    margin-right 36px
    padding 12px 0

    a
      display block
      width 100%
      height 100%
      background url('../../../public/images/logo.png') no-repeat 0 0;


  .header-menu
    width 500px
    float left
    overflow hidden

    md-tabs.header-menu-wrapper
      width 530px

      md-tabs-canvas
        height header-menu-tab-height

        md-pagination-wrapper
          height header-menu-tab-height

          md-tab-item
            transition all .3s ease-in-out
            height header-menu-tab-height
            margin-left 26px
            line-height 52px
            padding 10px 15px
            font-weight bold
            letter-spacing 0.7px
            font-size 14px

            &:first-child
              margin-left -30px

            &:nth-child(2)
              margin-left 0

  @media (min-width 768px)
    .header-menu
      width 500px

  @media (max-width 962px)
    .navbar-right
      .dropdown
        .header-account-menu
          .dropdown-toggle
            width 165px
            min-width 165px

    .header-menu
      width 350px

      md-tabs.header-menu-wrapper
        md-tabs-canvas
          md-pagination-wrapper
            md-tab-item
              padding 10px
              margin-left 0

  .header-search
    height 42px
    margin 15px 0

    input
      color font-color

    input,
    button
      height 42px
      padding 0
      vertical-align top
      background-color transparent
      border none

    i
      font-size 25px
      color #fff


  .header-account-menu__avatar
    margin 2px 0
    width 32px
    height 32px
    border-radius 50%
    border 1px solid #fff
    background-color #fff
    margin-top 20px
    background-clip border-box
    background-origin padding-box
    background-position-x 50%
    background-position-y 50%
    background-size cover
    div
      margin-left -3px

  .header-account-menu
    padding-right 15px

    .dropdown-toggle
      padding 18px 0
      cursor pointer
      transition all .3s ease-in-out

    .header-account-menu__info
      text-transform uppercase
      max-width 110px
      overflow hidden

      p
        margin 0
        height 18px

    .header-account-menu__name,
    .header-account-menu__info
      color #fff
      font-size 15px
      line-height 18px

    .header-account-menu__name
      margin 0
      letter-spacing 0.3px

    .header-account-menu-box
      position absolute !important
      width 170px
      margin 0
      padding 6px 0 12px
      border-width 0
      border-radius 0 0 2px 2px
      cursor default

      li
        padding 6px 15px 6px 25px
        line-height 23px

        span
          text-transform uppercase

        a
          padding 0
          &:focus,
          &:hover
            background-color transparent !important

          span, i
            color #fff

          i
            line-height 23px
            font-size 16px

          .lang
            width 24px
            height 16px
            background-size 100% 100%
            display inline-block

            &.en
              background-image url('data:image/svg+xml;base64,')

            &.nl
