  .navbar-nav
    .dropdown
      &.open
        .dropdown-menu
          display block


  .header-mobile
    .header-mobile__config,
    .header-mobile__menu
      background-color transparent
      border none
      color #fff
      width 24px
      height 32px
      text-align center
      padding 0
      margin 20px 24px 20px 15px

      i
        font-size 25px

    .navbar-nav
      margin 0



@media only screen and (-Webkit-min-device-pixel-ratio: 1.5),
only screen and (-moz-min-device-pixel-ratio: 1.5),
only screen and (-o-min-device-pixel-ratio: 3/2),
only screen and (min-device-pixel-ratio: 1.5)
  .header
    .header-logo
      a
        background-image url('../../../public/images/logo@2x.png')
        background-size 113px 48px;

