.searchBar
  position absolute
  left 0
  width 100%
  -webkit-transition all 0.4s ease-in-out 0s
  transition all 0.4s ease-in-out 0s
  input[type="search"]
    background-color #fff !important
    padding-left 153px !important
    position absolute
    width 100% !important
    top 0
    margin 0
    height 72px !important
    font-family "Source Sans Pro"
    font-size 19px !important
  ul.md-autocomplete-suggestions
    width 100%
    box-shadow 0 2px 2px 0 rgba(0, 0, 0, 0.24), 0 0 2px 0 rgba(0, 0, 0, 0.12)
    border-style solid
    border-width 0.5px
    border-image-source linear-gradient(to bottom, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0) 80%, rgba(0, 0, 0, 0.02) 95%, rgba(0, 0, 0, 0.04))
    border-image-slice 1
  md-autocomplete button
    display none !important

.search-suggestions
  top 71px !important
  li
    font-size 19px !important
    line-height 71px
    height 71px

.md-virtual-repeat-container.md-autocomplete-suggestions-container
  z-index 1051

md-content
  overflow visible

div.md-virtual-repeat-scroller
  top 0

  li
    background-color #fff
    width 100%
  li:hover
    background-color #eee

#searchClose
  width 32px
  height 32px
  opacity 0.8
  position absolute
  right 150px
  top 15px
  z-index 99
  cursor pointer
  pointer-events auto

.fixing-padding
  padding 11px 0px 28px 0 !important

.fixing-vertical-alignment
  display flex
  align-items center
  padding 0 !important

.reservation_full_wrapper .description
  max-height 58px
  overflow-y auto
  overflow-x hidden

@media print
  .search-result-content
    display none
