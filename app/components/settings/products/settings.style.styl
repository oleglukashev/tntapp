.products_tables
  .panel
    margin-bottom 20px
    .panel-heading
      .accordion-toggle
        padding 5px 20px
        .pull-left
          line-height 25px
    .panel-body
      border-width 0px !important
      padding 0 0 13px 0 !important

  .tables
    .dndPlaceholder
      background-color font-color
      display block
      height 88px

    .table_item_li
      height 68px

      .table_item_product
        padding-left 29px
        opacity 0.7
        color rgba(0,0,0,0.87) !important
        font-family "Source Sans Pro", "Helvetica Neue", Helvetica, Arial, sans-serif
        font-size 15px
        width 25%
      .table_item_slider
        margin-top -9px
        width 65%
      .table_item_actions
        width 10%

.day-of-week
  padding 8px 10px !important
  vertical-align middle !important

.nine-o-clock
  text-align left !important
  padding-left 15% !important

.eleven-o-clock div
  text-align left !important
  margin-left 94% !important

.twenty-four-o-clock
  text-align right !important
  padding-right 8% !important

.twenty-four-o-clock2 div
  text-align right !important
  padding-right 7.6% !important

.head-table
  th
    border-bottom-width 0px !important
    color rgba(0, 0, 0, 0.87) !important
    font-family "Source Sans Pro", "Helvetica Neue", Helvetica, Arial, sans-serif
    font-size 15px
  td
    border-width 0px !important
    vertical-align middle !important
    color #55637d
    font-family "Source Sans Pro", "Helvetica Neue", Helvetica, Arial, sans-serif
    font-size 15px
    padding 10px 28px !important

.remove-button
  color #f00

md-tabs.product_tabs
  md-tabs-wrapper
    display none

  md-tabs-content-wrapper
    md-tab-content
      .md-content-submit
        min-height modal-height

.select-product-wrapper
  padding-bottom 120px !important

.adding-product-wrapper
  padding-bottom 159px !important

.table_item_li:after
  border-width 0px !important

.m-t-n-s
  margin-top -7px
