.agenda .reservation
    width 202px
    height 30px
    border 1px green_color solid
    border-radius 3px
    position absolute
    cursor move
    background-color #ffffff
    z-index 9
    color green_color
    overflow hidden
    i.mdi
        position relative
        top 1px
        left 5px
        padding 0 7px 0 5px
    a
        position relative
        top -2px
        strong
            font-size 16px
            font-weight normal

.timeline-wrapper
    position relative

.now
    position absolute
    width 3px
    background-color #f00
    left 100px
    top 0
    z-index 10

.dragged
    border-style dashed !important
    background-color red !important


.agenda .on-drag-hover
    border-radius 3px
    background-color green_color
    opacity 0.8
    z-index 12


.agenda .panel-body
    padding 0
    overflow-x auto

.calendar_wrapper
    width 2465px

.list_wrapper i.mdi
    position initial

.agenda .md-list-item:after
    border-bottom-width 0px

.agenda .table_item_number
    width 35px
    text-align center
    padding-right 5px
    opacity 0.4

accordion.agenda
    i.mdi-chevron-up, i.mdi-chevron-down
        position relative
        top 4px
        left 5px

.hours-timeline
    margin-left 35px
    .hour
        padding-left 7px
        padding-right 8px
        color #3d1723
        opacity 0.4

.hour
    width 101px
    float left
    border-left 1px #ccc solid
    height 30px
    opacity 0.4

.quarter
    width 25px
    float left
    height 30px
.inactive
    background-color #bbb