.agenda .reservation
    height 30px
    border-width 1px
    border-style solid
    border-radius 3px
    position absolute
    cursor move
    background-color #ffffff
    z-index 9
    overflow hidden
    i.mdi
        position relative
        top 1px
        left 5px
        padding 0 7px 0 5px
    a
        position relative
        top -2px
        strong
            font-size 16px
            font-weight normal
    .resizer
        position absolute
        top 0
        right 0
        width 10px
        height 30px
        background-color transparent
        cursor col-resize

.timeline-wrapper
    position relative

.now
    position absolute
    width 3px
    background-color #f00
    left 100px
    top 0
    z-index 10

.dragged
    z-index -1 !important
    opacity 0.6

.agenda
    .quarter
        &.on-drag-hover
        &:hover
            border-radius 3px
            opacity 0.8
            z-index -1

.agenda .panel-body
    padding 0

.agenda .tables_wrapper
    width 48px
    background-color #fff
    z-index 1
    padding-top 31px
    border-right solid 1px rgba(0,0,0,0.02)
    float left

.agenda .scroll-wrapper
    width 2400px
    overflow hidden

.agenda .calendar_wrapper
    overflow-x scroll
    margin-left 47px

.agenda .calendar_wrapper::-webkit-scrollbar
    height 10px
    background-color #fafafa

.agenda .calendar_wrapper::-webkit-scrollbar-thumb
    border-radius 10px
    background-color #c1c1c1

.list_wrapper i.mdi
    position initial

.agenda .md-list-item:after
    border-bottom-width 0px

.agenda .table_item_number
    width 47px
    text-align center
    padding-right 5px
    padding-bottom 5px
    opacity 0.4
    border-bottom solid 0.5px rgba(0, 0, 0, 0.06)
    height 30px
    line-height 30px
    margin 0

accordion.agenda
    i.mdi-chevron-up, i.mdi-chevron-down
        position relative
        top 4px
        left 5px

.agenda .panel-group .panel+.panel
    margin-top 15px

.agenda .panel-group .panel
    border-radius 6px

.agenda .panel-heading
    padding 5px 16px 8px 16px

.hours-timeline
    .hour
        padding-left 7px
        padding-right 8px
        color #3d1723
        opacity 0.4

.hour
    width 100px
    float left
    border-left 1px #ccc solid
    height 30px
    opacity 0.4
    z-index 9

.quarter
    width 24.76px
    float left
    height 30px
    z-index 9
.inactive
    background-color #bbb

.z-index-1
    z-index 1

for theme in 'default' 'aqua' 'lego' 'chocolate'
  .{theme}-theme
    .agenda .reservation
      color lookup(theme + '-success-color')
      border 1px lookup(theme + '-success-color') solid
    .agenda .on-drag-hover
      background-color lookup(theme + '-success-color')
