/* HEADER */


.header
  position fixed
  top 0
  width 100%
  height 72px
  background-color #263238
  box-shadow 0 2px 2px 0 rgba(0, 0, 0, 0.24), 0 0 2px 0 rgba(0, 0, 0, 0.12)
  border-radius 0
  margin 0
  border-width 0
  border-radius 0

  .header-logo
    width 113px
    height 72px
    margin-right 25px

  .header-menu
    .header-menu__item
      & > a
        line-height 42px
        font-size 14px
        text-transform uppercase
        color #b7bbbd
        letter-spacing 0.7px
        font-weight bold
        background-color transparent

        &:hover
          color #fff

        .badge
          position relative
          top -10px
          margin-left -10px
          color #fff
          letter-spacing normal

      &.active
        border-bottom 4px solid #36b590

        a
          padding-bottom 11px


  .header-search
    width 24px
    height 24px
    margin 24px 0

    i
      font-size 24px
      color #fff


  .header-account-menu
    .header-account-menu__avatar
      margin 2px 0
      width 32px
      height 32px
      border-radius 50%
      border 1px solid #fff

    .dropdown-toggle
      padding 18px 15px
      cursor pointer

    .header-account-menu__info
      max-width 102px

      .header-account-menu__name,
      .header-account-menu__info
        color #fff
        margin 0
        font-size 15px
        line-height 18px

      .header-account-menu__name
        letter-spacing 0.3px

    .header-account-menu-box
      width 196px
      margin 0
      padding 6px 0 12px
      border-width 0
      border-radius 0 0 2px 2px
      background-color #263238

      li
        a
          padding 6px 24px
          line-height 23px

          &:focus,
          &:hover
            background-color transparent

            span, i
              color #fc6a35

          span
            color #d9d2d2
            text-transform uppercase

          i
            color #d9d2d2
            line-height 23px
            font-size 16px

  @media (min-width 1200px)
    .header-account-menu
      width 196px


  .navbar-nav
    .dropdown
      &.open
        .dropdown-menu
          display block


  .header-mobile
    .header-mobile__config,
    .header-mobile__menu
      background-color transparent
      border none
      color #fff
      width 24px
      height 24px
      text-align center
      padding 0
      margin 24px

      i
        font-size 24px


/* BUDGES */


.badge,.label
  font-weight bold
  text-shadow 0 1px 0 rgba(0, 0, 0, 0.2)


.badge.bg-light,
.label.bg-light
  text-shadow none


.badge
  background-color #cfdadd


.badge-sm
  padding 2px 5px !important
  font-size 85%


.label-sm
  padding-top 0
  padding-bottom 1px


.badge-white
  padding 2px 6px
  background-color transparent
  border 1px solid rgba(255, 255, 255, 0.35)


.badge-empty
  color inherit
  background-color transparent
  border 1px solid rgba(0, 0, 0, 0.15)


