green_color = #36b590

.header
  position fixed
  top 0
  width 100%
  height 72px
  background-color #263238
  box-shadow 0 2px 2px 0 rgba(0, 0, 0, 0.24), 0 0 2px 0 rgba(0, 0, 0, 0.12)
  border-radius 0
  margin 0
  border-width 0
  border-radius 0
  z-index 50

  .header-logo
    width 113px
    height 72px
    margin-right 36px
    padding 12px 0

    a
      display block
      width 100%
      height 100%
      background url('../../../public/images/logo.png') no-repeat 0 0;


  md-tabs.header-menu
    width 590px
    float left
    border-radius 0

    md-tabs-canvas
      height 72px

      md-pagination-wrapper
        height 72px

        md-tab-item
          line-height 52px
          padding 10px 15px
          color #b7bbbd
          font-weight bold
          letter-spacing 0.7px

          &:first-child
            margin-left 0

        @media (min-width 962px)
          md-tab-item
            margin-left 26px

    md-ink-bar
      height 4px
      background-color green_color


  .header-search
    height 42px
    margin 15px 0

    input
      color #c8c8c8

    input,
    button
      height 42px
      padding 0
      vertical-align top
      background-color transparent
      border none

    i
      font-size 25px
      color #fff


  .header-account-menu__avatar
    margin 2px 0
    width 32px
    height 32px
    border-radius 50%
    border 1px solid #fff
    background-color #fff
    position relative
    top 18px
    left 25px
    background-clip border-box
    background-origin padding-box
    background-position-x 50%
    background-position-y 50%
    background-size cover
    div
      margin-left -3px

  .header-account-menu
    .dropdown-toggle
      padding 18px 15px
      cursor pointer

    .header-account-menu__info
      text-transform uppercase
      max-width 102px
      overflow hidden

      p
        width 1000px
        margin 0

    .header-account-menu__name,
    .header-account-menu__info
      color #fff
      font-size 15px
      line-height 18px

    .header-account-menu__name
      margin 0
      letter-spacing 0.3px

    .header-account-menu-box
      width 196px
      margin 0
      padding 6px 0 12px
      border-width 0
      border-radius 0 0 2px 2px
      background-color #263238

      li
        a
          padding 6px 15px 6px 25px
          line-height 23px

          &:focus,
          &:hover
            background-color transparent !important

            span, i
              color #fc6a35

          span
            color #d9d2d2
            text-transform uppercase

          i
            color #d9d2d2
            line-height 23px
            font-size 16px

  @media (min-width 1200px)
    .header-account-menu
      width 196px


  .navbar-nav
    .dropdown
      &.open
        .dropdown-menu
          display block


  .header-mobile
    .header-mobile__config,
    .header-mobile__menu
      background-color transparent
      border none
      color #fff
      width 24px
      height 32px
      text-align center
      padding 0
      margin 20px 24px

      i
        font-size 25px



@media only screen and (-Webkit-min-device-pixel-ratio: 1.5),
only screen and (-moz-min-device-pixel-ratio: 1.5),
only screen and (-o-min-device-pixel-ratio: 3/2),
only screen and (min-device-pixel-ratio: 1.5)
  .header
    .header-logo
      a
        background-image url('../../../public/images/logo@2x.png')
        background-size 113px 48px;

#search_icon
  position absolute
  z-index 99
  top 30px
  font-size 16px
  left 81px
  font-weight bold

.photo_loading
  background-image none
  background-color #999